# Crime Analytics API - Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/crime-analytics

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# AI Model Configuration
AI_TRAINING_ITERATIONS=3
AI_CONFIDENCE_THRESHOLD=0.8
AI_ERROR_THRESHOLD=0.05
PREDICTION_MONTHS_AHEAD=6
PREDICTION_CONFIDENCE_INTERVAL=0.8

# Data Management
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls
BATCH_SIZE=100
DUPLICATE_THRESHOLD=0.8

# Analytics Configuration
HIGH_RISK_THRESHOLD=10
MEDIUM_RISK_THRESHOLD=5
LOW_RISK_THRESHOLD=0
CRIME_RATE_MULTIPLIER=1000

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# Performance
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME_MS=30000
CACHE_TTL=3600
ENABLE_CACHING=true

# Frontend Integration
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:3001/api

# File Storage
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Testing
TEST_MONGODB_URI=mongodb://localhost:27017/crime-analytics-test
LOAD_TEST_DATA=false
TEST_DATA_PATH=./base_data/
